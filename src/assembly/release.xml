<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                              http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>release</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <files>
        <file>
            <source>src/assembly/resources/readme.txt</source>
        </file>
        <file>
            <source>main/target/ALEX-${project.version}.war</source>
            <destName>ALEX.war</destName>
        </file>
        <file>
            <source>standalone/target/standalone-${project.version}-jar-with-dependencies.jar</source>
            <destName>ALEX.jar</destName>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <outputDirectory>documentation</outputDirectory>
            <directory>target/staging</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>

</assembly>