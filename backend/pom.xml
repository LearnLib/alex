        <htmlunitdriver.version>2.28.2</htmlunitdriver.version>
        <jose4j.version>0.6.2</jose4j.version>
        <shiro.version>1.4.0</shiro.version>
        <xml-apis.version>1.4.01</xml-apis.version>
